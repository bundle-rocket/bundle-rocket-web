.login-view
    position: fixed
    left: 0
    top: 0
    width: 100%
    height: 100%
    overflow-y: auto
    background-color: $-melon-colors.grey200

    &-content

        width: 500px
        margin: 0 auto
        display: flex

        flex-direction: column
        align-items: center
        padding-bottom: 100px

    &-logo
        margin: 50px 0 16px
        width: 160px
        height: @width
        background: url(../common/img/bundle-rocket-logo.png) transparent
        background-size: 100% 100%

    &-title
        font-size: 36px
        padding: 16px 0

    &-footer
        padding-top: 16px

        >.ui-link
            display: block
            text-align: center
            margin-top: 16px


    &-form
        padding-top: 16px
        width: 100%

        &-row
            padding: 10px 0 20px


